<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi plantilla de Ingreso de Datos en EJS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h2 style="color:crimson;">Historial</h2>

            <% const dataexits=array.length> 0; %>
                <% if(dataexits){ %>

                    <div class="table-responsive">
                        <table class="table table-dark">
                            <tr style="color: yellow;">
                                <th>title</th>
                                <th>price</th>
                                <th>URL</th>
                            </tr>
                            <% for (const arra of array) {%>
                                <tr>
                                    <td>
                                        <%=arra.title%>
                                    </td>
                                    <td>
                                        <%=arra.price%>
                                    </td>
                                    <td>
                                        
                                        <img src="<%=arra.thumbnail%>" width="85" height="100">
                                    </td>
                                </tr>
                                <%};%>
                        </table>
                    </div>
                    <% } else{ %>
                        <h3 class="alert alert-danger">no se encontraron datos</h1>
                            <% } %>
        </div>
        <a class="btn btn-info mt-3 mb-5" href="/">Form</a>
    </div>
</body>

</html>